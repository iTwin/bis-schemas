<ECSchema schemaName="BisCustomAttributes" alias="bisCA" version="01.00.00" description="Custom attributes to indicate BIS concepts." displayLabel="BIS Custom Attributes" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2">
    <ECEnumeration typeName="SchemaGradeValue" backingTypeName="string" isStrict="true" description="Used with SchemaType to declare the schema author's intended grade for the schema.">
        <ECEnumerator displayLabel="A" value="A"/> <!-- description="True BIS schemas carefully designed for editing and interoperability." -->
        <ECEnumerator displayLabel="B" value="B"/> <!-- description="Either: Legacy “consensus” schemas intelligently converted to BIS, or new BIS schemas, with one-way conversion to BIS in mind, but not intended for editing (native format)." -->
        <ECEnumerator displayLabel="C" value="C"/> <!-- description="Legacy schema with software-discoverable semantics, intelligently converted to follow applicable BIS rules and patterns." -->
        <ECEnumerator displayLabel="D" value="D"/> <!-- description="Legacy schema with minimim or no software-discoverable semantics, converted to follow basic BIS rules and patterns." -->
    </ECEnumeration>

    <ECEnumeration typeName="SchemaLayerValue" backingTypeName="string" isStrict="true" description="Used with SchemaType to declare the schema author's intended layer for the schema.">
        <ECEnumerator displayLabel="Core"                value="Core"/>               <!-- description="Schemas defining the 'fabric of the universe' and some key organizational strategies." -->
        <ECEnumerator displayLabel="Common"              value="Common"/>             <!-- description="Schemas defining abstract concepts and patterns used by multiple disciplines." -->
        <ECEnumerator displayLabel="Discipline-Physical" value="DisciplinePhysical"/> <!-- description="Schemas defining physical/spatial and closely associated concepts, in light of a specific discipline." -->
        <ECEnumerator displayLabel="Discipline-Other"    value="DisciplineOther"/>    <!-- description="Schemas defining concepts from modeling perspectives other than physical, in light of a specific discipline." -->
        <ECEnumerator displayLabel="Application"         value="Application"/>        <!-- description="Schemas defining concepts that no other schema would need or want to reference. Product and iModel Connector schemas as well as dynamically-generated or user-customized schemas belong to this layer." -->
    </ECEnumeration>

    <ECCustomAttributeClass typeName="SchemaInfo" appliesTo="Schema" modifier="Sealed" description="Declares the suitability of this schema for use in production and other workflows.">
        <ECProperty propertyName="Grade" typeName="SchemaGradeValue" description="Indicates the BIS-based compatibility level of this schema."/>
        <ECProperty propertyName="Layer" typeName="SchemaLayerValue" description="Indicates the layer in the BIS schema hierarchy that this schema targets." />
    </ECCustomAttributeClass>
</ECSchema>
