<ECSchema schemaName="DomainAgnosticCoreUnits" alias="dacu" version="01.00.00" description="This contains the unit definitions that are used by iTwin Platform generic tools and domain-agnostic applications" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2">
    <ECSchemaReference name="CoreCustomAttributes" version="01.00.03" alias="CoreCA"/>
    <ECSchemaReference name="BisCustomAttributes" version="01.00.00" alias="bisCA"/>
    <ECSchemaReference name="Formats" version="01.00.00" alias="f"/>
    <ECSchemaReference name="Units" version="01.00.09" alias="u"/>

    <ECCustomAttributes>
        <ProductionStatus xmlns="CoreCustomAttributes.01.00.03">
            <SupportedUse>NotForProduction</SupportedUse>
        </ProductionStatus>
        <SchemaLayerInfo xmlns="BisCustomAttributes.01.00.00">
            <Value>Application</Value>
        </SchemaLayerInfo>
    </ECCustomAttributes>

    <!-- Basic Geometric Quantities -->
    <KindOfQuantity typeName="LENGTH" displayLabel="Length" description="General length measurements for linear dimensions" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:M];f:DefaultRealU(4)[u:MM];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="1e-05"/>
    <KindOfQuantity typeName="LENGTH_SHORT" displayLabel="Short Length" description="Small length measurements for detailed dimensions and tolerances" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(2)[u:MM];f:DefaultRealU(4)[u:CM];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:IN]" relativeError="0.01"/>
    <KindOfQuantity typeName="LENGTH_LONG" displayLabel="Long Length" description="Large length measurements for long distances" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:KM];f:DefaultRealU(4)[u:M];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="LENGTH_COORDINATE" displayLabel="Coordinate Length" description="Length measurements for coordinate systems and spatial positioning" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:KM];f:DefaultRealU(4)[u:M];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="AREA" displayLabel="Area" description="General area measurements for surface calculations" persistenceUnit="u:SQ_M" presentationUnits="f:DefaultRealU(2)[u:SQ_M];f:DefaultRealU(2)[u:SQ_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="AREA_SMALL" displayLabel="Small Area" description="Small area measurements for detailed surface calculations" persistenceUnit="u:SQ_M" presentationUnits="f:DefaultRealU(2)[u:SQ_MM];f:DefaultRealU(4)[u:SQ_IN]" relativeError="0.0001"/>
    <KindOfQuantity typeName="AREA_LARGE" displayLabel="Large Area" description="Large area measurements for geographical and regional calculations" persistenceUnit="u:SQ_M" presentationUnits="f:DefaultRealU(4)[u:SQ_KM];f:DefaultRealU(4)[u:SQ_MILE]" relativeError="0.01"/>
    <KindOfQuantity typeName="VOLUME" displayLabel="Volume" description="General volume measurements for 3D space calculations" persistenceUnit="u:CUB_M" presentationUnits="f:DefaultRealU(2)[u:CUB_M];f:DefaultRealU(2)[u:CUB_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="VOLUME_SMALL" displayLabel="Small Volume" description="Small volume measurements for detailed 3D calculations and components" persistenceUnit="u:CUB_M" presentationUnits="f:DefaultRealU(4)[u:CUB_MM];f:DefaultRealU(4)[u:CUB_CM];f:DefaultRealU(4)[u:CUB_IN];f:DefaultRealU(4)[u:CUB_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="VOLUME_LARGE" displayLabel="Large Volume" description="Large volume measurements for geographical and bulk calculations" persistenceUnit="u:CUB_M" presentationUnits="f:DefaultRealU(4)[u:CUB_KM];f:DefaultRealU(4)[u:CUB_M];f:DefaultRealU(4)[u:CUB_YRD];f:DefaultRealU(4)[u:CUB_FT]" relativeError="0.01"/>
    <!-- Angular Quantities -->
    <KindOfQuantity typeName="ANGLE" displayLabel="Angle" description="General angular measurements for rotations and orientations" persistenceUnit="u:RAD" presentationUnits="f:DefaultRealU(2)[u:ARC_DEG];f:AngleDMS" relativeError="0.0001"/>
    <KindOfQuantity typeName="BEARING" displayLabel="Bearing" description="Angular measurements for directional bearings and navigation" persistenceUnit="u:RAD" presentationUnits="f:AngleDMS" relativeError="0.0001"/>
    <!-- Time and Frequency Quantities -->
    <KindOfQuantity typeName="TIME" displayLabel="Time" description="General time measurements for durations and intervals" persistenceUnit="u:S" presentationUnits="f:DefaultRealU(2)[u:S];f:DefaultRealU(2)[u:MIN];f:DefaultRealU(2)[u:HR]" relativeError="0.0001"/>
    <!-- Percentage and Ratio Quantities -->
    <KindOfQuantity typeName="PERCENTAGE" displayLabel="Percentage" description="Percentage values for proportional measurements and statistics" persistenceUnit="u:DECIMAL_PERCENT" presentationUnits="f:DefaultRealU(2)[u:PERCENT];f:DefaultRealU(4)[u:DECIMAL_PERCENT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="RATIO" displayLabel="Ratio" description="Dimensionless ratio values for comparative measurements" persistenceUnit="u:ONE" presentationUnits="f:DefaultRealU(3)[u:ONE]" relativeError="0.0001"/>

</ECSchema>
