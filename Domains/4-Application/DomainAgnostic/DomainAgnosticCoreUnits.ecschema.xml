<ECSchema schemaName="DomainAgnosticCoreUnits" alias="dacu" version="01.00.00" description="This contains the unit definitions that are used by iTwin Platform generic tools and domain-agnostic applications" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2">
    <ECSchemaReference name="CoreCustomAttributes" version="01.00.03" alias="CoreCA"/>
    <ECSchemaReference name="BisCustomAttributes" version="01.00.00" alias="bisCA"/>
    <ECSchemaReference name="Formats" version="01.00.00" alias="f"/>
    <ECSchemaReference name="Units" version="01.00.09" alias="u"/>

    <ECCustomAttributes>
        <ProductionStatus xmlns="CoreCustomAttributes.01.00.03">
            <SupportedUse>NotForProduction</SupportedUse>
        </ProductionStatus>
        <SchemaLayerInfo xmlns="BisCustomAttributes.01.00.00">
            <Value>Application</Value>
        </SchemaLayerInfo>
    </ECCustomAttributes>

    <!-- Basic Geometric Quantities -->
    <KindOfQuantity typeName="LENGTH" displayLabel="Length" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:M];f:DefaultRealU(4)[u:MM];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="1e-05"/>
    <KindOfQuantity typeName="LENGTH_SHORT" displayLabel="Short Length" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(2)[u:MM];f:DefaultRealU(4)[u:CM];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:IN]" relativeError="0.01"/>
    <KindOfQuantity typeName="LENGTH_LONG" displayLabel="Long Length" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:KM];f:DefaultRealU(4)[u:M];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="AREA" displayLabel="Area" persistenceUnit="u:SQ_M" presentationUnits="f:DefaultRealU(2)[u:SQ_M];f:DefaultRealU(2)[u:SQ_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="VOLUME" displayLabel="Volume" persistenceUnit="u:CUB_M" presentationUnits="f:DefaultRealU(2)[u:CUB_M];f:DefaultRealU(2)[u:CUB_FT]" relativeError="0.0001"/>

    <!-- Angular Quantities -->
    <KindOfQuantity typeName="ANGLE" displayLabel="Angle" persistenceUnit="u:RAD" presentationUnits="f:DefaultRealU(2)[u:ARC_DEG];f:AngleDMS" relativeError="0.0001"/>
    <KindOfQuantity typeName="BEARING" displayLabel="Bearing" persistenceUnit="u:RAD" presentationUnits="f:AngleDMS" relativeError="0.0001"/>

    <!-- Time and Frequency Quantities -->
    <KindOfQuantity typeName="TIME" displayLabel="Time" persistenceUnit="u:S" presentationUnits="f:DefaultRealU(2)[u:S];f:DefaultRealU(2)[u:MIN];f:DefaultRealU(2)[u:HR]" relativeError="0.0001"/>

    <!-- Velocity and Acceleration Quantities -->
    <KindOfQuantity typeName="VELOCITY" displayLabel="Velocity" persistenceUnit="u:M_PER_SEC" presentationUnits="f:DefaultRealU(2)[u:M_PER_SEC];f:DefaultRealU(2)[u:KM_PER_HR];f:DefaultRealU(2)[u:MPH]" relativeError="0.0001"/>
    <KindOfQuantity typeName="ACCELERATION" displayLabel="Acceleration" persistenceUnit="u:M_PER_SEC_SQ" presentationUnits="f:DefaultRealU(2)[u:M_PER_SEC_SQ];f:DefaultRealU(2)[u:FT_PER_SEC_SQ]" relativeError="0.0001"/>

    <!-- Percentage and Ratio Quantities -->
    <KindOfQuantity typeName="PERCENTAGE" displayLabel="Percentage" persistenceUnit="u:DECIMAL_PERCENT" presentationUnits="f:DefaultRealU(2)[u:PERCENT];f:DefaultRealU(4)[u:DECIMAL_PERCENT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="RATIO" displayLabel="Ratio" persistenceUnit="u:ONE" presentationUnits="f:DefaultRealU(3)[u:ONE]" relativeError="0.0001"/>

</ECSchema>
