<ECSchema schemaName="DefaultToolsUnits" alias="dtu" version="01.00.00" description="This contains the unit definitions that are used by default for tools and components used across multiple iTwin applications" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2">
    <ECSchemaReference name="CoreCustomAttributes" version="01.00.03" alias="CoreCA"/>
    <ECSchemaReference name="BisCustomAttributes" version="01.00.00" alias="bisCA"/>
    <ECSchemaReference name="Formats" version="01.00.00" alias="f"/>
    <ECSchemaReference name="Units" version="01.00.09" alias="u"/>

    <ECCustomAttributes>
        <ProductionStatus xmlns="CoreCustomAttributes.01.00.03">
            <SupportedUse>NotForProduction</SupportedUse>
        </ProductionStatus>
        <SchemaLayerInfo xmlns="BisCustomAttributes.01.00.00">
            <Value>Application</Value>
        </SchemaLayerInfo>
    </ECCustomAttributes>

    <KindOfQuantity typeName="LENGTH" displayLabel="Default Tools Length" description="General length measurements for linear dimensions" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:M];f:DefaultRealU(4)[u:MM];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="1e-05"/>
    <KindOfQuantity typeName="LENGTH_COORDINATE" displayLabel="Default Tools Coordinate Length" description="Length measurements for coordinate systems and spatial positioning" persistenceUnit="u:M" presentationUnits="f:DefaultRealU(4)[u:KM];f:DefaultRealU(4)[u:M];f:AmerFI;f:AmerFI(16);f:DefaultRealU(4)[u:FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="AREA" displayLabel="Default Tools Area" description="General area measurements for surface calculations" persistenceUnit="u:SQ_M" presentationUnits="f:DefaultRealU(2)[u:SQ_M];f:DefaultRealU(2)[u:SQ_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="VOLUME" displayLabel="Default Tools Volume" description="General volume measurements for 3D space calculations" persistenceUnit="u:CUB_M" presentationUnits="f:DefaultRealU(2)[u:CUB_M];f:DefaultRealU(2)[u:CUB_FT]" relativeError="0.0001"/>
    <KindOfQuantity typeName="ANGLE" displayLabel="Default Tools Angle" description="General angular measurements for rotations and orientations" persistenceUnit="u:RAD" presentationUnits="f:DefaultRealU(2)[u:ARC_DEG];f:AngleDMS" relativeError="0.0001"/>
    <KindOfQuantity typeName="TIME" displayLabel="Default Tools Time" description="General time measurements for durations and intervals" persistenceUnit="u:S" presentationUnits="f:DefaultRealU(2)[u:S];f:DefaultRealU(2)[u:MIN];f:DefaultRealU(2)[u:HR]" relativeError="0.0001"/>
    <KindOfQuantity typeName="PERCENTAGE" displayLabel="Default Tools Percentage" description="Percentage values for proportional measurements and statistics" persistenceUnit="u:DECIMAL_PERCENT" presentationUnits="f:DefaultRealU(2)[u:PERCENT];f:DefaultRealU(4)[u:DECIMAL_PERCENT]" relativeError="0.0001"/>

</ECSchema>
