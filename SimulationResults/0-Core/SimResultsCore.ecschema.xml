<ECSchema schemaName="SimResultsCore" alias="simrescore" version="01.00.00" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2" displayLabel="Simulation Results Core" description="">
    <ECSchemaReference name="ECDbMap" version="02.00.02" alias="ecdbmap"/>

    <ECCustomAttributes>
        <!-- TODO: Advertise that this is not a BIS schema, but a "SimulationResults" one -->
    </ECCustomAttributes>

    <ECCustomAttributeClass typeName="ResultRecordOwners" appliesTo="AnyClass" modifier="Sealed" description="Identifies a class which is designed to be hidden from teh user interface.  Hides the class it is applied to and all derived classes">
        <ECArrayProperty propertyName="ClassNames" typeName="string" minOccurs="0" maxOccurs="unbounded" description="An array of names of properties that should not be used. Case-insensitive comparison will be used."/>
    </ECCustomAttributeClass>

    <ECEntityClass typeName="ResultRecord" modifier="Abstract" displayLabel="Result Record" description="">
        <ECProperty propertyName="ElementId" typeName="long" displayLabel="" description=""/>
    </ECEntityClass>

    <ECEntityClass typeName="TimeStep" modifier="None" displayLabel="Time-Step" description="">
        <ECCustomAttributes>
            <ClassMap xmlns="ECDbMap.02.00.02">
                <MapStrategy>TablePerHierarchy</MapStrategy>
            </ClassMap>
        </ECCustomAttributes>
        <ECProperty propertyName="TimeFromStart" typeName="double" description=""/>
    </ECEntityClass>

    <ECEntityClass typeName="TimeVariantResultRecord" modifier="Abstract" displayLabel="Time-Variant Result Record" description="">
        <BaseClass>ResultRecord</BaseClass>
        <ECNavigationProperty propertyName="TimeStep" relationshipName="ResultRecordAtTimeStep" direction="Forward" displayLabel="Time-Step" description="">
            <ECCustomAttributes>
                <ForeignKeyConstraint xmlns="ECDbMap.02.00.02"/>
            </ECCustomAttributes>
        </ECNavigationProperty>
    </ECEntityClass>

    <ECRelationshipClass typeName="ResultRecordAtTimeStep" strength="referencing" direction="Forward" modifier="None" description="">
        <!-- @see TimeVariantResultRecord.TimeStep ECNavigationProperty -->
        <Source multiplicity="(0..*)" roleLabel="defined at" polymorphic="true">
            <Class class="TimeVariantResultRecord"/>
        </Source>
        <Target multiplicity="(0..1)" roleLabel="defines" polymorphic="true">
            <Class class="TimeStep" />
        </Target>
    </ECRelationshipClass>
</ECSchema>